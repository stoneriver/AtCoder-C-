#include <bits/stdc++.h>
using namespace std;

int main() {
	long long N, M, ans = 0;
	cin >> N >> M;
	if (N == 1 && M == 1) {
		ans = 1;
	} else if (N == 1) {
		ans = M - 2;
	} else if (M == 1) {
		ans = N - 2;
	} else {
		ans = (N - 2) * (M - 2);
	}
	cout << ans << endl;
	return 0;
}
